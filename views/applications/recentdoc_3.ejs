<% include ../partials/home_header %>
<script>
    function printContent(el) {
        var restorepage = document.body.innerHTML;
        var printcontent = document.getElementById(el).innerHTML;
        document.body.innerHTML = printcontent;
        window.print();
        document.body.innerHTML = restorepage;
    }
</script>
<% include ../partials/home_navbar %>
<% var item; %>
<% if(myid == 0){ %>
    <% item = user.application_3[user.application_3.length - 1]; %>
<% }else{ %>
    <% item = myid %>
<% } %>

<main role="main">
    <a class="btn btn-danger btn-outline-danger m-3" href="javascript:history.back()">Back</a>
    <div class="container">


        <div class="    ">
            <div class="row">
                <div class="col-md-8 bg-light pb-2 left-section">

                    <div class="h2 text-center mb-5 pt-5">Maternity leave application</div>
                    <div id="hello">
                        <div class="pl-5 pr-5 pt-3">
                            <p>Name, company, manager, colleague, date</p>
                            <p><%= moment(item.date).format("Do MMM YYYY") %></p>
                            
                            <p><%= item.name %>,  <%= item.company_name %>, <%= item.manager_name %> <%= item.colleague_name %> <%= item.date %></p>

                            <p>No. of weeks, start date, end date, sunject, email </p>
                            <p><%= item.no_of_weeks %>,  <%= item.start_date %>, <%= item.end_date %> <%= item.subject %> <%= item.email %></p>
                        </div>

                    </div>

                    
                    <form action="/application/download_3/<%= item._id %>" method="GET">
                        <button class="btn btn-success btn-outline-dark btn-sm mb-2" disabled type="submit"><i class="fa fa-file-download"></i>&nbsp;Download Docx</button>
                        <button class="btn btn-success btn-outline-dark btn-sm mb-2" type="button"onclick="printContent('hello')"><i class="fa fa-print"></i>&nbsp;Download Pdf</button>
                    </form>
                    <a href="/application_3" class="btn btn-success btn-outline-dark btn-sm mb-2">New Application</a>

                </div>
                <div class="col-md-4 right-section">
                    <div class="h2 text-center section-heading p-3">Recent Commits</div>
                    <hr>
                    <% user.application_3.reverse().forEach(function(dates){ %>
                        <div class="pt-3 m-1 rounded text-dark section-box">
                            <div class="file-date"><%= moment(dates.committed).format('MMMM DD, h:mm a'); %></div>
                            <!-- <div class="file-reason">Name : <%= dates.name %></div> -->
                            <div class="file-name"><%= dates.name %></div>
                            <p>
                                <a class="btn btn-outline-dark btn-sm pl-4 pr-4" href="/application/recentdoc_3/<%= dates._id %>">See </a>
                                <a class="btn btn-outline-info btn-sm pl-4 pr-4"
                                href="/application/<%= dates._id %>/edit_3">Edit </a>
                                <form action="/application/<%= dates._id %>/delete_3?_method=DELETE" method="POST">
                                    <button class="btn btn-outline-info btn-sm pl-4 pr-4"
                                    >Delete </button>
                                </form>    
                            </p>
                        </div>
                        <hr>
                    <% }); %>
                </div>
            </div>

        </div>
    </div>

</main>

<% include ../partials/footer_script %>

</body>
</html>
