<% include partials/home_header %>
<link rel="stylesheet" href="/css/resume.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.0/animate.min.css">
<style>
    .text-primary {
        color: #485460 !important;
    }
</style>

<script>
    function printContent(el) {
        var restorepage = document.body.innerHTML;
        var printcontent = document.getElementById(el).innerHTML;
        document.body.innerHTML = printcontent;
        window.print();
        document.body.innerHTML = restorepage;
    }
</script>
<% include partials/home_navbar %>
<a class="btn btn-danger btn-outline-danger m-3" href="javascript:history.back()">Back</a>
<button class="btn btn-outline-primary" onclick="printContent('download_pdf')">Print Resume</button>
<!-- <hr class="prettyline"> -->
<div class="container">
    <div id="download_pdf" class="container">
        <section id="resume_head">
            <br>
            <div class="row">
                <div class="col-md-12">
                    <div class="h1 text-uppercase font-weight-bold">
                        <span><%= resume.fullname %></span>
                        <span class="h4 text-capitalize">(<%= resume.designation %>)</span>
                    </div>
                    <div class="h4">
                        <span>Email Id:- <span><%= resume.email %></span>
                    </div>
                    <div class="h4">
                        <span>Contact No.:- <%= resume.mobile %></span></span>
                    </div>
                    <!--                     <div class="h5">
                                            <%= resume.address %>
                                        </div> -->
                </div>
            </div>
        </section>
        <!-- <hr> -->
        <br>
        <section id="resume_career">
            <div class="row mb-2">
                <div class="col-md-12 h2 font-weight-bold pt-2 pb-2 pl-4" style="background-color: #BFC0BF" >
                    <span>Career Objective</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-justify">
                    <span class="h5">
                        <%= resume.careeroverview %>
                    </span>
                </div>
            </div>
        </section>
        <!-- <hr> -->
        <br>
        <section id="resume_education">
            <div class="row mb-2">
                <div class="col-md-12 h2 font-weight-bold  pt-2 pb-2 pl-4" style="background-color: #BFC0BF">
                    <span>Education</span>
                </div>
            </div>
            <% resume.degree.forEach(function(degree) { %>
                <div class="row h5">
                    <div class="col-md-12">
                        <span class="font-weight-bold"><%= degree.institution %></span>
                        <span >(<%= degree.passingyear %>)</span>
                    </div>
                    <div class="col-md-12">
                        <span><%= degree.degree %></span>
                    </div>
                    <div class="col-md-12">
                        <span><%= degree.details %></span>
                    </div>
                </div>
                <hr>
            <% }); %>

        </section>
        <section id="resume_project">
            <div class="row mb-2">
                <div class="col-md-12 h2 font-weight-bold pt-2 pb-2 pl-4" style="background-color: #BFC0BF">
                    <span>Projects</span>
                </div>
            </div>
            <% resume.project.forEach(function(project) { %>
                <div class="row">
                    <div class="col-md-12">
                        <span class="h4 font-weight-bold"><%= project.title %></span>
                        <span class="h5">(<%= project.organization %>)</span>
                    </div>
                    <div class="col-md-12 h5 text-justify">
                        <span>
                            <%= project.details %>
                        </span>
                    </div>
                </div>
                <hr>
            <% }) %>

        </section>
        <% if(resume.experience.length > 0) { %>
            <section id="resume_experience">
                <div class="row mb-2">
                    <div class="col-md-12 h2 font-weight-bold  pt-2 pb-2 pl-4" style="background-color: #BFC0BF">
                        <span>Experience</span>
                    </div>
                </div>
                <% resume.experience.forEach(function(experience) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <span class="font-weight-bold h4"><%= experience.title %></span>
                            <span class="h5">(<%= experience.organization %>)</span>
                        </div>

                        <div class="col-md-12 h5 text-justify">
                            <span>
                                <%= experience.details %>
                            </span>
                        </div>
                    </div>
                    <hr>
                <% }) %>
            </section>
        <% } %>
        <section id="resume_skill">
            <div class="row mb-2">
                <div class="col-md-12 h2 font-weight-bold  pt-2 pb-2 pl-4" style="background-color: #BFC0BF">
                    <span>Skills</span>
                </div>
            </div>
            <div class="row">
                <% resume.skill.forEach(function(skill) { %>
                    <div class="col-md-12 h6">
                        <span class="font-italic">
                            <%= skill %>
                        </span>
                    </div>
                <% }) %>
            </div>
            <hr>
        </section>
    </div>

</div>
<!-- <hr class="prettyline"> -->

<% include partials/footer_script %>

</body>
</html>
