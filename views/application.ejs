<% include partials/home_header %>
  <% include partials/home_navbar %>
<main role="main">
	<div class="container">
		<a class="btn btn-danger btn-outline-danger m-3" href="/homepage">Back</a>

		<div class="album py-5 bg-light">
		<div class="container">
			<div class="h2 text-center mb-5">Application for leave in School.</div>
			<form action="/application" method="post">
				<div class="form-group row">
			    <label for="name" class="col-sm-2 col-form-label">Full Name:</label>
			    <div class="col-sm-10">
			      <input class="form-control" type="text" name="name" id="name" placeholder="Tom Cruze" autocomplete="off">
			    </div>
			  </div>
				<div class="form-group row">
			    <label for="schoolname" class="col-sm-2 col-form-label">School Name:</label>
			    <div class="col-sm-10">
			      <input class="form-control" type="text" name="school_name" id="schoolname" placeholder="Kendriya Vidyalaya" autocomplete="off">
			    </div>
			  </div>
			  <div class="form-group row">
			    <label for="address" class="col-sm-2 col-form-label">Address:</label>
			    <div class="col-sm-10">
			      <input class="form-control" type="text" name="address" id="address" placeholder="e.g. Street no. 3, Gole Market, New Delhi-110043" autocomplete="off">
			    </div>
			  </div>
			  <div class="form-group row">
			    <label for="date" class="col-sm-2 col-form-label">Date:</label>
			    <div class="col-sm-10">
			      <input class="form-control" type="date" name="date" id="date" placeholder="26/11/1997" autocomplete="off">
			    </div>
			  </div>
			  <div class="form-group row">
			    <label for="reason" class="col-sm-2 col-form-label">Reason:</label>
			    <div class="col-sm-10">
			      <input class="form-control" type="text" name="reason" id="reason" placeholder="reason e.g chicken pox, fever" autocomplete="off">
			    </div>
			  </div>
			  <div class="form-group row">
			    <div class="col-sm-6 mt-3">
			      <input class="btn btn-block btn-success" type="submit" value="Save & Preview">
			    </div>
			    <div class="col-sm-6 mt-3">
			      <a href="/download" class="btn btn-block btn-success" type="button">Download Without Saving &rarr;</a>
			    </div>
			  </div>
			  
			</form>




		</div>
		</div>
	</div>

</main>

<footer class="text-muted">
  <div class="container">
    <p class="float-right">
      <a href="#">Back to top</a>
    </p>
    
  </div>
</footer>

