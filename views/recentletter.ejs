
<% include partials/home_header %>
<% include partials/home_navbar %>
	<main role="main">
		<a class="btn btn-danger btn-outline-danger m-3" href="/homepage">Back</a>
	<div class="container">
		

		<div class="bg-light">
				<div class="row">
					<div class="col-md-8 bg-light">
						<div class="h2 text-center mb-5">Application for leave in School.</div>
						
						<h3>value from database</h3>

						<br>
						<% user.letter_t1_t1.forEach(function(letter){ %>
							<p>Name - <%= letter.name %></p>
							<p>Designation - <%= letter.designation %></p>
							<p>Address - <%= letter.address%></p>
							<p>Date - <%= letter.date %></p>
							<p>Supervisor's first name - <%= letter.supervisor_first_name %></p>
							<p>Supervisor's last name - <%= letter.supervisor_last_name %></p>
							<p>SuperVisor's designation - <%= letter.supervisor_designation %></p>
							<p>Company's name - <%= letter.company_name %></p>
							<p>Company's address - <%= letter.company_address %></p>	
							<p>Start date - <%= letter.start_date %></p>
							<p>End date - <%= letter.end_date %></p>					
							<br>
						<% }) %>
						<form action="/download" method="GET">
							<input class="btn btn-success btn-block btn-outline-success btn-lg mb-2" type="submit" value="Download in Docx format">
						</form>
						<input class="btn btn-success btn-block btn-outline-success btn-lg" type="button" value="New Application Form ">

					</div>
					<div class="col-md-4 bg-info">
						<div class="h2 text-center text-primary">Recent Commits</div>
						<!-- <% user.application_t1_t1.reverse().forEach(function(dates){ %>
