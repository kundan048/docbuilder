			      <input class="form-control" type="date" name="leave[date]" id="date" placeholder="" autocomplete="off">
			    </div>
			  </div>

			  <div class="form-group row">
			    <label class="col-sm-3 col-form-label">Supervisor's First Name:</label>
			    <div class="col-sm-9">
			      <input class="form-control" type="text" name="leave[supervisor_first_name]" placeholder="John" autocomplete="off">
			    </div>
			  </div>

			  <div class="form-group row">
			    <label class="col-sm-3 col-form-label">Supervisor's Last Name:</label>
