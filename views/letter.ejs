<script>
    $(document).ready(function () {
        var name = $("#name");
        var designation = $("#designation");
        var address = $("#address");

        var date = $("#date");

        var supervisorfirstname = $("#supervisorfirstname");
        var supervisorlastname = $("#supervisorlastname");
        var supervisordesignation = $("#supervisordesignation");
        var companyname = $("#companyname");
        var companyaddress = $("#companyaddress");

        var startdate = $("#startdate");
        var enddate = $("#enddate");


        var namep = $("#namep");
        var namel = $("#namel");
        var designationp = $("#designationp");
        var addressp = $("#addressp");
        var datep = $("#datep");
        var supervisorfirstnamep = $("#supervisorfirstnamep");
        var supervisorlastnamep = $("#supervisorlastnamep");
        var supervisorlastnamel = $("#supervisorlastnamel");
        var supervisordesignationp = $("#supervisordesignationp");
        var companynamep = $("#companynamep");
        var companyaddressp = $("#companyaddressp");
        var startdatep = $("#startdatep");
        var enddatep = $("#enddatep");
        var monthName = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];

        if (name.val() == "") {
            namep.html("____");
            namel.html("____");
        }
        if (designation.val() == "") {
            designationp.html("____");
        }
        if (address.val() == "") {
            addressp.html("____");
        }
        if (date.val() == "") {
            datep.html("____");
        }
        if (supervisorfirstname.val() == "") {
            supervisorfirstnamep.html("____");
        }
        if (supervisorlastname.val() == "") {
            supervisorlastnamep.html("____");
            supervisorlastnamel.html("____");
        }
        if (supervisordesignation.val() == "") {
            supervisordesignationp.html("____");
        }
        if (companyname.val() == "") {
            companynamep.html("____");
        }
        if (companyaddress.val() == "") {
            companyaddressp.html("____");
        }
        if (startdate.val() == "") {
            startdatep.html("____");
        }
        if (enddate.val() == "") {
            enddatep.html("____");
        }

        name.keyup(function () {
            var namehere = name.val();
            if (namehere.length == 0) {
                namep.html("____");
                namel.html("____");
            } else {
                namep.html(namehere);
                namel.html(namehere);
            }
        });
        designation.keyup(function () {
            var designationhere = designation.val();
            if (designationhere.length == 0) {
                designationp.html("____");
            } else {
                designationp.html(designationhere);
            }
        });
        address.keyup(function () {
            var addresshere = address.val();
            if (addresshere.length == 0) {
                addressp.html("____");
            } else {
                addressp.html(addresshere);
            }
        });
        date.mouseout(function () {
            var datehere = date.val();

            if (datehere.length == 0) {
                datep.html("____");
            } else {
                var datehere = new Date(date.val());
                day = datehere.getDate();
                month = datehere.getMonth();
                year = datehere.getFullYear();
                var finaldate = day + " - " + monthName[month] + " - " + year;
                datep.html(finaldate);
            }
        });

        supervisorfirstname.keyup(function () {
            var supervisorfirstnamehere = supervisorfirstname.val();
            if (supervisorfirstnamehere.length == 0) {
                supervisorfirstnamep.html("____");
            } else {
                supervisorfirstnamep.html(supervisorfirstnamehere);
            }
        });
        supervisorlastname.keyup(function () {
            var supervisorlastnamehere = supervisorlastname.val();
            if (supervisorlastnamehere.length == 0) {
                supervisorlastnamep.html("____");
                supervisorlastnamel.html("____");
            } else {
                supervisorlastnamep.html(supervisorlastnamehere);
                supervisorlastnamel.html(supervisorlastnamehere);
            }
        });
        supervisordesignation.keyup(function () {
            var supervisordesignationhere = supervisordesignation.val();
            if (supervisordesignationhere.length == 0) {
                supervisordesignationp.html("____");
            } else {
                supervisordesignationp.html(supervisordesignationhere);
            }
        });
        companyname.keyup(function () {
            var companynamehere = companyname.val();
            if (companynamehere.length == 0) {
                companynamep.html("____");
            } else {
                companynamep.html(companynamehere);
            }
        });
        companyaddress.keyup(function () {
            var companyaddresshere = companyaddress.val();
            if (companyaddresshere.length == 0) {
                companyaddressp.html("____");
            } else {
                companyaddressp.html(companyaddresshere);
            }
        });
        startdate.mouseout(function () {
            var startdatehere = startdate.val();

            if (startdatehere.length == 0) {
                startdatep.html("____");
            } else {
                var startdatehere = new Date(startdate.val());
                day = startdatehere.getDate();
                month = startdatehere.getMonth();
                year = startdatehere.getFullYear();
                var finaldate = day + "/" + monthName[month] + "/" + year;
                startdatep.html(finaldate);
            }
        });
        enddate.mouseout(function () {
            var enddatehere = enddate.val();

            if (enddatehere.length == 0) {
                enddatep.html("____");
            } else {
                var enddatehere = new Date(enddate.val());
                day = enddatehere.getDate();
                month = enddatehere.getMonth();
                year = enddatehere.getFullYear();
                var finaldate = day + "/" + monthName[month] + "/" + year;
                enddatep.html(finaldate);
            }
        });


    });
</script>


<script>

    window.onscroll = function () {
        scrollFunction();
    };
    window.onload = function () {
        scrollFunction();
    };

    function scrollFunction() {
        if (document.body.scrollTop > 300 || document.documentElement.scrollTop > 300) {
            document.getElementById("goTop").style.display = "block";
        } else {
            document.getElementById("goTop").style.display = "none";
        }
    }

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>
</body>
</html>
